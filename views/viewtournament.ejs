<body>
  <div class="box-area">
    <header>
      <div class="wrapper2">
        <span class="logo" id="tournament-name"></span>
        <!--
        <div id="admin-menu-button" class="tournament-admin-menu-button hidden">
          <div></div>
          <div></div>
          <div></div>
        </div>
        <ul id="admin-menu" class="tournament-admin-menu">
          <li>Delete tournament</li>
        </ul>
        -->

        <nav>
          <form class="d-inline-flex searchbar" id="nav-tournament-search-form" role="search">
            <input class="form-control form-control-sm me-auto" id="nav-tournament-search-name" type="search" placeholder="Tournament Name" aria-label="Tournament Name">
            <button class="btn btn-outline-success" type="submit">Search</i></button>
          </form>
          <a class="btn btn-outline-success" id="nav-account-search-form" href="/account/search">
            <i class="bi bi-person"></i>
            <i class="bi bi-search"></i>
          </a>
          <a id="nav-home" href="/">Home</a> |
          <% if (isSignedIn) { %>
            <a href="/tournament/create">Create Tournament</a> |
            <a href='/account/view?id=<%= sessionPlayerId %>'> Account</a> |
            <a href="/about">About</a> |
            <a href="/logout">Logout</a>
          <% } else { %>
            <a href="/about">About</a> |
            <a href="/login">Sign In</a> |
            <a href="/createaccount">Sign Up</a>
          <% } %>
        </nav>
      </div>
    </header>

    <div class="bordered-container">
      <p id="tournament-status"></p>

      <div class="tournament-content">

        <div class="dropdown">
          <button id="tournament-admin-menu-button" class="btn btn-danger dropdown-toggle hidden" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            Admin Menu
          </button>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#">Delete Tournament</a></li>
          </ul>
        </div>

        <button id="tournament-register-button" class="hidden"></button>
        <button id="tournament-start-button" class="hidden tournament-start-button">Click to start tournament</button>
        <p id="tournament-description"></p>
        
        <div class="tournament-details">
          <div class="tournament-details-item">
            <h3>Game Type</h3>
            <p id="tournament-gamemode"></p>
          </div>
          <div class="tournament-details-item">
            <h3>Date</h3>
            <p id="tournament-date"></p>
          </div>
          <div class="tournament-details-item">
            <h3>Location</h3>
            <p id="tournament-location"></p>
          </div>
          <div class="tournament-details-item">
            <h3>Fees</h3>
            <p id="tournament-fees"></p>
          </div>
          <div class="tournament-details-item">
            <h3>Elo Limits</h3>
            <p id="tournament-eloLimits"></p>
          </div>
          <div class="tournament-details-item">
            <h3>Seeding</h3>
            <p id="tournament-isSeeded"></p>
          </div>
          <div class="tournament-details-item">
            <h3>Places Paid</h3>
            <p id="tournament-placesPaid"></p>
          </div>
        </div>

        <div class="tournament-bracket-container", id="tournament-bracket">
          
        </div>
      </div>
    </div>
  </div>
  <script src="/js/search.js" type="text/javascript"></script>
  <script src="/js/viewTournament.js" type="text/javascript"></script>
</body>

</html>